DESCRIPTION="Fakes the system date"
HOMEPAGE="http://packages.debian.org/source/sid/datefudge"
SRC_URI="mirror://debian/pool/main/${PN:0:1}/${PN}/${PN}_${PV}.tar.gz"
PATCH_URI="1.17-cygwin.patch"

src_compile() {
	lndirs
	cd ${B}
	cygmake all ${PN}.1
}

src_install() {
	cd ${B}
	dobin ${PN}
	doman ${PN}.1
	exeinto /usr/lib/${PN}
	doexe ${PN}.so
}
